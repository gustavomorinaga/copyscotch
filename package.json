{
	"name": "copyscotch",
	"version": "0.2.0",
	"private": true,
	"type": "module",
	"license": "MIT",
	"description": "My self implementation of Hoppscotch API Client",
	"author": {
		"name": "Gustavo Morinaga",
		"email": "me@gustavomorinaga.dev",
		"url": "https://gustavomorinaga.dev"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gustavomorinaga/copyscotch"
	},
	"engines": {
		"pnpm": ">=9",
		"node": ">=18"
	},
	"packageManager": "pnpm@9.12.2",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"clean": "del-cli ./**/node_modules/ ./**/.svelte-kit/",
		"clean:cache": "del-cli ./**/.svelte-kit/",
		"clean:modules": "del-cli ./**/node_modules/",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"format:staged": "pretty-quick --staged",
		"lint": "pnpm format:check && eslint .",
		"lint:fix": "pnpm format && eslint . --fix",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"ui:add": "pnpm dlx shadcn-svelte@latest add",
		"preinstall": "npx only-allow pnpm",
		"postinstall": "pnpm -r sync"
	},
	"devDependencies": {
		"@codemirror/lang-html": "6.4.9",
		"@codemirror/lang-json": "6.0.1",
		"@fontsource-variable/inter": "5.1.0",
		"@fontsource-variable/roboto-mono": "5.1.0",
		"@huntabyte/eslint-config": "0.3.2",
		"@huntabyte/eslint-plugin": "0.1.0",
		"@sveltejs/adapter-auto": "3.2.5",
		"@sveltejs/kit": "2.7.1",
		"@sveltejs/vite-plugin-svelte": "3.1.2",
		"@types/html-minifier": "4.0.5",
		"@types/uuid": "10.0.0",
		"autoprefixer": "10.4.20",
		"cssnano": "7.0.6",
		"cssnano-preset-advanced": "7.0.6",
		"del-cli": "6.0.0",
		"eslint": "8.57.0",
		"eslint-plugin-svelte": "2.45.1",
		"globals": "15.11.0",
		"html-minifier": "4.0.0",
		"http-status": "1.8.0",
		"postcss": "8.4.47",
		"postcss-import": "16.1.0",
		"postcss-load-config": "6.0.1",
		"prettier": "3.3.3",
		"prettier-plugin-svelte": "3.2.7",
		"prettier-plugin-tailwindcss": "0.6.8",
		"pretty-quick": "4.0.0",
		"svelte": "4.2.19",
		"svelte-check": "4.0.5",
		"svelte-codemirror-editor": "1.4.1",
		"svelte-eslint-parser": "0.41.1",
		"sveltekit-superforms": "2.20.0",
		"tailwind-scrollbar": "3.1.0",
		"tailwindcss": "3.4.14",
		"tslib": "2.8.0",
		"typescript": "5.6.3",
		"typescript-eslint": "8.10.0",
		"uuid": "10.0.0",
		"vite": "5.4.9"
	},
	"dependencies": {
		"bits-ui": "0.21.16",
		"clsx": "2.1.1",
		"formsnap": "1.0.1",
		"lucide-svelte": "0.453.0",
		"paneforge": "0.0.6",
		"svelte-sonner": "0.3.28",
		"tailwind-merge": "2.5.4",
		"tailwind-variants": "0.2.1",
		"vaul-svelte": "0.3.2",
		"zod": "3.23.8",
		"zod-to-json-schema": "3.23.3"
	}
}
